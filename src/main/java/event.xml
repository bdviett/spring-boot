<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="helloWorld" class="demo.event.HelloWorld">
		<property name="message" value="Bui Duc viet"></property>
	</bean>
	
	<bean id="cStartEventHander" class="demo.event.CStartEventHander"></bean>
	<bean id="cStopEventHander" class="demo.event.CStopEventHander"></bean>
</beans>